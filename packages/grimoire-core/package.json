{
	"name": "@arckate/grimoire-core",
	"type": "module",
	"version": "0.0.1",
	"description": "Un framework de test inspiré de Testing Library pour les CLI basées sur Commander",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": {
		"name": "Emeric Lebbrecht",
		"email": "emeric.lebbrecht@gmail.com"
	},
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"test": "vitest run --config vitest.config.ts --coverage",
		"test:watch": "vitest --config vitest.config.ts --coverage",
		"lint": "biome check --write",
		"clean": "rm -rf dist tsconfig.tsbuildinfo"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./utils": {
			"import": "./dist/utils/index.js",
			"types": "./dist/utils/index.d.ts"
		},
		"./prompts": {
			"import": "./dist/prompts/index.js",
			"types": "./dist/prompts/index.d.ts"
		},
		"./path": {
			"import": "./dist/path/index.js",
			"types": "./dist/path/index.d.ts"
		},
		"./errors": {
			"import": "./dist/errors/index.js",
			"types": "./dist/errors/index.d.ts"
		},
		"./entities": {
			"import": "./dist/entities/index.js", 
			"types": "./dist/entities/index.d.ts"
		},
		"./const": {
			"import": "./dist/const/index.js",
			"types": "./dist/const/index.d.ts"
		},
		"./config": {
			"import": "./dist/config/index.js",
			"types": "./dist/config/index.d.ts"
		},
		"./cmd": {
			"import": "./dist/cmd/index.js",
			"types": "./dist/cmd/index.d.ts"
		}
	},
	"typesVersions": {
		"*": {
			"config": [
				"dist/config/index.d.ts"
			],
			"utils": [
				"dist/utils/index.d.ts"
			],
			"prompts": [
				"dist/prompts/index.d.ts"
			],
			"path": [
				"dist/path/index.d.ts"
			],
			"errors": [
				"dist/errors/index.d.ts"
			],
			"entities": [
				"dist/entities/index.d.ts"
			],
			"const": [
				"dist/const/index.d.ts"
			],
			"cmd": [
				"dist/cmd/index.d.ts"
			]
		}
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@arckate/testing-cli": "workspace:*",
		"@inquirer/prompts": "^7.9.0",
		"@types/lodash.merge": "^4.6.9",
		"@types/lodash.mergewith": "^4.6.9",
		"chalk": "^5.6.2",
		"commander": "^14.0.2",
		"lodash.merge": "^4.6.2",
		"lodash.mergewith": "^4.6.2",
		"node-plop": "^0.32.3",
		"ora": "^9.0.0"
	},
	"devDependencies": {
		"@types/node": "^24.9.1",
		"@vitest/coverage-v8": "^4.0.0",
		"tsdown": "^0.15.11",
		"typescript": "^5.9.3",
		"vitest": "^4.0.0"
	},
	"turbo": {
		"tags": ["core"]
	}
}
